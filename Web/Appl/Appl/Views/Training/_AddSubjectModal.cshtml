<!-- Modal -->
<div class="modal fade" id="subjectModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Subject</h4>
            </div>
            <div class="modal-body">
                <label for="subject_title">Title: </label>
                <input id="sendSubjectTitle" name="subject_title" type="text" /><br />
                <label for="subject_body">Body: </label>
                <textarea id="sendSubjectBody" name="subject_body"></textarea>
            </div>
            <div class="modal-footer">
                <button id="sendSubject" class="btn btn-primary ladda-button" data-style="expand-left"><span class="ladda-label">Send</span></button>
                <button id="cancel" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>